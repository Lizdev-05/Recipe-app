<div class="flex justify-center text-center p-8">
  <div class="w-[90%]">
    <p class="text-xl font-bold mb-2">Public Recipes</p>
    <ul class="flex flex-col items-center py-4">
      <% @public_recipes.each do |recipe| %>
        <li class="bg-white rounded-lg flex justify-between items-center w-[100%] my-2 py-2 px-2 border-2 shadow-2xl border-gray-200 rounded-xl hover:bg-gray-50 shadow-2xl">
          <div class="p-2">
            <div class="mb-2 text-blue-600 hover:text-blue-300 text-xl font-bold">
              <%= link_to recipe.name, recipe_path(recipe) %>
            </div>
            By: <span class="font-bold"><%= recipe.user.name %></span>
          </div>
          <div class="w-[80%] px-2 py-1 flex flex-col items-center gap-2">
            <div class="flex justify-between w-[50%]">
              <span>Total food items: </span>
              <span class="font-bold"><%= recipe.foods.length %></span>
            </div>
            <div class="flex justify-between w-[50%]">
              <span>Total price:</span>
               <span class="font-bold">$<%= @totals[recipe.name] %></span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>